<% if current_user != book.user %>
  <% if book.favorited_by?(current_user) %>
      <%= link_to book_favorites_path(book), class:"unlike-btn", remote: true, method: :delete do %>
        ♥<%= book.favorites.count %>
      <% end %>
  <% else %>
      <%= link_to book_favorites_path(book), remote: true, method: :post do %>
        ♥<%= book.favorites.count %>
      <% end %>
  <% end %>
<% end %>